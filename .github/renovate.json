{
  "extends": [
    "config:base"
  ],
  "schedule": [
      "every weekday except on Wednesday",
      "every weekend",
      "before 5pm on Wednesday"
  ],
  "poetry": {
    "enabled": true
  },
  "docker": {
    "enabled": true
  },
  "github-actions": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ],
  "platformAutomerge": true
}
